.vacancies
  h2.vacancies__title Вакансии
  .vacancies-switch.switch
    .switch__caption
      p.switch__caption-content Общий центр обслуживания (Иваново)
    <label class="switch__button">
      <input class="switch__input" type="checkbox">
      <span class="switch__slider"></span>
    </label>
    .switch__caption
      p.switch__caption-content Все вакансии
  .vacancies-select-container
    select.vacancies-select(name="selector")
      option(value="main-center-vacancies") Общий центр обслуживания (Иваново)
      option(value="all-vacancies") Все вакансии

  .vacancies__content
    ul.vacancies-list
      li.vacancies-item.vacancy
        a.vacancy__link(href="#")
          h3.vacancy__title Бухгалтер по расчету заработной платы
          .vacancy__image
            svg(class="vacancy-icon" width="18" height="18")
              use(xlink:href="#accounting")
          p.vacancy__salary 68.000 — 180.000 руб.
          button.vacancy__button Подробнее
      li.vacancies-item.vacancy
        a.vacancy__link(href="#")
          h3.vacancy__title Бухгалтер по расчету заработной платы
          .vacancy__image
            svg(class="vacancy-icon" width="20" height="20")
              use(xlink:href="#management")
          p.vacancy__salary 68.000 — 180.000 руб.
          button.show-more-button.vacancy__button Подробнее
      li.vacancies-item.vacancy
        a.vacancy__link(href="#")
          h3.vacancy__title Бухгалтер по расчету заработной платы
          .vacancy__image
            svg(class="vacancy-icon" width="24" height="26")
              use(xlink:href="#chart")
          p.vacancy__salary 68.000 — 180.000 руб.
          button.show-more-button.vacancy__button Подробнее
  button.vacancies__button
    span Больше вакансий
