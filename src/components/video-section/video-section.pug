section.video-section
  .video-section__filter
  .video-section__player
    video(src=require("../../assets/video-section.mp4")).video
    button.video-button.video-button--play
      p.visually-hidden Включить видео
    button.video-button.video-button--pause
      p.visually-hidden Поставить видео на паузу
    .controls
      input(type="range" value=0 step=0.5).progress-bar
      .controls__time 00:00
